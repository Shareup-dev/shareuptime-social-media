{
  "name": "shareuptime-backend",
  "version": "1.0.0",
  "description": "Backend API for ShareUpTime Social Media Platform",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
  "lint": "eslint src --ext .ts",
  "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --check \"src/**/*.{ts,js,json,md}\"",
    "format:fix": "prettier --write \"src/**/*.{ts,js,json,md}\"",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "postbuild": "echo \"Build completed successfully\"",
    "prepare": "husky install",
    "prod": "npm run build && npm start"
  },
  "keywords": [
    "social-media",
    "api",
    "nodejs",
    "typescript",
    "express",
    "mongodb"
  ],
  "author": "Shareup-dev",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Shareup-dev/shareuptime-social-media.git"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "@types/multer": "^2.0.0",
    "@types/socket.io": "^3.0.2",
    "@types/uuid": "^9.0.8",
    "aws-sdk": "^2.1692.0",
    "bcrypt": "^6.0.0",
    "cloudinary": "^1.41.3",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.19.1",
    "multer": "^2.0.2",
    "multer-storage-cloudinary": "^4.0.0",
    "neo4j-driver": "^6.0.0",
    "pg": "^8.16.3",
    "redis": "^5.8.3",
    "sharp": "^0.34.4",
    "socket.io": "^4.8.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "@types/bcrypt": "^6.0.0",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.7.2",
    "@types/pg": "^8.15.5",
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "@typescript-eslint/parser": "^8.46.1",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.10",
    "prettier": "^3.6.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3"
  },
  "lint-staged": {
    "src/**/*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
