{
  "name": "shareuptime-backend",
  "version": "1.0.0",
  "description": "Backend API for ShareUpTime Social Media Platform",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:integration": "vitest --testPathPattern=integration",
    "test:unit": "vitest --testPathPattern=controllers|utils --testPathIgnorePatterns=integration",
    "lint": "echo \"No linting configured yet\" && exit 0",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "postbuild": "echo \"Build completed successfully\"",
    "prod": "npm run build && npm start"
  },
  "keywords": [
    "social-media",
    "api",
    "nodejs",
    "typescript",
    "express",
    "mongodb"
  ],
  "author": "Shareup-dev",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Shareup-dev/shareuptime-social-media.git"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "@types/multer": "^2.0.0",
    "@types/socket.io": "^3.0.2",
    "@types/uuid": "^9.0.8",
    "aws-sdk": "^2.1692.0",
    "bcrypt": "^6.0.0",
    "cloudinary": "^1.41.3",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.19.1",
    "multer": "^2.0.2",
    "multer-storage-cloudinary": "^4.0.0",
    "neo4j-driver": "^6.0.0",
    "pg": "^8.16.3",
    "redis": "^5.8.3",
    "sharp": "^0.34.4",
    "socket.io": "^4.8.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.7.2",
    "@types/pg": "^8.15.5",
    "@types/supertest": "^6.0.3",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.5",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3",
    "vitest": "^0.34.0"
  }
}
