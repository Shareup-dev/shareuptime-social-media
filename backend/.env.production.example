# Production Environment Variables
# Copy this file to .env.production and fill in the actual values

NODE_ENV=production
PORT=4000

# Database Configuration
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=shareup_social
POSTGRES_USER=social_admin
POSTGRES_PASSWORD=your_secure_postgres_password_here

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_key_for_production_2025

# Admin Configuration
ADMIN_KEY=your_secure_admin_key_for_production_2025

# Cloudinary Configuration (for media storage)
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Server Configuration
SERVER_URL=https://shareuptime.com

# Email Configuration (if using email service)
EMAIL_SERVICE=gmail
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password

# Monitoring and Logging
LOG_LEVEL=info
ENABLE_MONITORING=true

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=your_session_secret_key_2025

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100