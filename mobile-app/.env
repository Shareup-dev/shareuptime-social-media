# ShareUpTime Mobile App Environment Configuration

# API Configuration
API_BASE_URL=http://localhost:8000/api
API_TIMEOUT=30000

# Development Environment
NODE_ENV=development
DEBUG_MODE=true

# Authentication
JWT_SECRET_KEY=shareuptime_mobile_jwt_secret_2024

# Redux DevTools
REACT_NATIVE_REDUX_DEVTOOLS=true

# Flipper Debug
FLIPPER_DISABLE=false

# API Endpoints
LOGIN_ENDPOINT=/auth/login
REGISTER_ENDPOINT=/auth/register
POSTS_ENDPOINT=/posts
USERS_ENDPOINT=/users
MESSAGES_ENDPOINT=/messages

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_IMAGE_TYPES=jpg,jpeg,png,gif,webp
ALLOWED_VIDEO_TYPES=mp4,mov,avi

# Cache Configuration
CACHE_TIMEOUT=300000
IMAGE_CACHE_SIZE=100

# Push Notifications (for future)
FCM_SERVER_KEY=your_fcm_server_key_here
FCM_SENDER_ID=your_fcm_sender_id_here
